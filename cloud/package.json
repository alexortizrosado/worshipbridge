{
  "name": "@worshipbridge/cloud",
  "version": "1.0.0",
  "private": true,
  "description": "Cloud backend for WorshipBridge",
  "main": "dist/index.js",
  "scripts": {
    "start": "node dist/index.js",
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "build": "tsc",
    "clean": "rm -rf dist node_modules",
    "lint": "eslint . --ext .ts",
    "test": "jest",
    "docker:build": "docker build -t worshipbridge-cloud .",
    "docker:run": "docker run -p 3000:3000 worshipbridge-cloud"
  },
  "dependencies": {
    "@aws-sdk/client-cognito-identity-provider": "^3.525.0",
    "@aws-sdk/client-s3": "^3.525.0",
    "@aws-sdk/client-sqs": "^3.525.0",
    "@types/express-fileupload": "^1.5.1",
    "@worshipbridge/shared": "file:../shared",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.18.3",
    "express-fileupload": "^1.5.1",
    "express-validator": "^6.14.0",
    "helmet": "^7.1.0",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.24",
    "@typescript-eslint/eslint-plugin": "^7.1.0",
    "@typescript-eslint/parser": "^7.1.0",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "rimraf": "^5.0.5",
    "ts-jest": "^29.1.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.3"
  }
}
