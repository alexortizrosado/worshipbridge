{
  "name": "@worshipbridge/bridge",
  "version": "1.0.0",
  "description": "Local bridge application for WorshipBridge",
  "main": "dist/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "concurrently \"npm run dev:main\" \"npm run dev:renderer\"",
    "dev:main": "tsc -w",
    "dev:renderer": "cd renderer && npm run dev",
    "build": "npm run build:main && npm run build:renderer",
    "build:main": "tsc",
    "build:renderer": "cd renderer && npm run build",
    "build:upload": "ts-node scripts/build-and-upload.ts",
    "clean": "rimraf dist",
    "lint": "eslint src --ext .ts",
    "test": "jest"
  },
  "dependencies": {
    "@worshipbridge/shared": "workspace:*",
    "electron-store": "^8.1.0",
    "electron-updater": "^6.1.7",
    "winston": "^3.11.0",
    "ws": "^8.16.0"
  },
  "devDependencies": {
    "@types/node": "^20.11.24",
    "@types/ws": "^8.5.10",
    "@typescript-eslint/eslint-plugin": "^7.1.0",
    "@typescript-eslint/parser": "^7.1.0",
    "concurrently": "^8.2.2",
    "electron": "^29.1.0",
    "electron-builder": "^24.12.0",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "rimraf": "^5.0.5",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "build": {
    "appId": "com.worshipbridge.bridge",
    "productName": "WorshipBridge Bridge",
    "publish": {
      "provider": "generic",
      "url": "${UPDATE_SERVER_URL}"
    },
    "mac": {
      "category": "public.app-category.utilities",
      "target": ["dmg", "zip"],
      "entitlements": "build/entitlements.mac.plist",
      "identity": "${MACOS_CERTIFICATE_ID}"
    },
    "win": {
      "target": ["nsis"],
      "certificateFile": "${WINDOWS_CERTIFICATE_FILE}",
      "certificatePassword": "${WINDOWS_CERTIFICATE_PASSWORD}"
    },
    "files": [
      "dist/**/*",
      "renderer/dist/**/*",
      "assets/**/*"
    ],
    "extraResources": [
      {
        "from": "assets",
        "to": "assets"
      }
    ]
  }
} 